<Window x:Class="GymApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gym Management System" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#2C3E50" Foreground="White" Padding="5">
            <MenuItem Header="Trang chủ" Click="Dashboard_Click" Foreground="White"/>
            <MenuItem Header="Thành viên" Foreground="White">
                <MenuItem Header="Danh sách thành viên" Click="MemberList_Click"/>
                <MenuItem Header="Thêm thành viên" Click="MemberCreate_Click"/>
                <MenuItem Header="Thông tin thành viên" Click="MemberInfo_Click"/>
            </MenuItem>
            <MenuItem Header="Gói tập" Foreground="White">
                <MenuItem Header="Danh sách gói tập" Click="PackageList_Click"/>
                <MenuItem Header="Thêm gói tập" Click="PackageCreate_Click"/>
            </MenuItem>
            <MenuItem Header="Thẻ tập" Foreground="White">
                <MenuItem Header="Danh sách thẻ tập" Click="MembershipList_Click"/>
                <MenuItem Header="Tạo thẻ tập" Click="MembershipCreate_Click"/>
            </MenuItem>
            <MenuItem Header="Nhân viên" Foreground="White">
                <MenuItem Header="Danh sách nhân viên" Click="StaffList_Click"/>
                <MenuItem Header="Thêm nhân viên" Click="StaffCreate_Click"/>
            </MenuItem>
        </Menu>

        <!-- Content Area -->
        <Frame Grid.Row="1" x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#34495E" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="Gym Management System v1.0"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="StatusText" Text="Sẵn sàng"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>