<UserControl x:Class="GymApp.Views.MembershipCards.MembershipCardsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:GymApp.Helpers">
    <Grid>
        <ContentControl Content="{Binding CurrentView}"
                        Visibility="{Binding CurrentView, Converter={x:Static helpers:NullToVisibilityConverter.Instance}}"/>

        <Grid Visibility="{Binding CurrentView, Converter={x:Static helpers:NullToVisibilityConverter.Inverse}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Membership Cards Management" Style="{StaticResource HeaderTextStyle}"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                <Button Content="Add Membership Card" Command="{Binding CreateMembershipCardCommand}"/>
                <Button Content="Edit Membership Card" Command="{Binding EditMembershipCardCommand}"/>
                <Button Content="Delete Membership Card" Command="{Binding DeleteMembershipCardCommand}"/>
            </StackPanel>

            <DataGrid Grid.Row="2" ItemsSource="{Binding MembershipCards}" SelectedItem="{Binding SelectedMembershipCard}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Member" Binding="{Binding MemberName}" Width="150"/>
                    <DataGridTextColumn Header="Package" Binding="{Binding PackageName}" Width="120"/>
                    <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                    <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Payment" Binding="{Binding PaymentMethod}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>