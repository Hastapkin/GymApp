<UserControl x:Class="GymApp.Views.Members.MemberListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:GymApp.Helpers">
    <Grid>
        <ContentControl Content="{Binding CurrentView}"
                        Visibility="{Binding CurrentView, Converter={x:Static helpers:NullToVisibilityConverter.Instance}}"/>

        <Grid Visibility="{Binding CurrentView, Converter={x:Static helpers:NullToVisibilityConverter.Inverse}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Members Management" Style="{StaticResource HeaderTextStyle}"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                <Button Content="Add Member" Command="{Binding CreateMemberCommand}"/>
                <Button Content="Edit Member" Command="{Binding EditMemberCommand}"/>
                <Button Content="Delete Member" Command="{Binding DeleteMemberCommand}"/>
            </StackPanel>

            <DataGrid Grid.Row="2" ItemsSource="{Binding Members}" SelectedItem="{Binding SelectedMember}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="200"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                    <DataGridTextColumn Header="Gender" Binding="{Binding Gender}" Width="80"/>
                    <DataGridTextColumn Header="Join Date" Binding="{Binding JoinDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>