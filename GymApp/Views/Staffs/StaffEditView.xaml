<UserControl x:Class="GymApp.Views.Staffs.StaffEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Edit Staff Member" Style="{StaticResource HeaderTextStyle}"/>

        <Grid Grid.Row="1" MaxWidth="600" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Content="Full Name *:"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Phone:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Email:"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Role *:"/>
            <ComboBox Grid.Row="3" Grid.Column="1" ItemsSource="{Binding Roles}" SelectedItem="{Binding Role}"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Start Date:"/>
            <DatePicker Grid.Row="4" Grid.Column="1" SelectedDate="{Binding StartDate}"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Salary:"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Address:"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Height="60" TextWrapping="Wrap"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Notes:"/>
            <TextBox Grid.Row="7" Grid.Column="1" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" Height="80" TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" Background="#4CAF50" Foreground="White"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>