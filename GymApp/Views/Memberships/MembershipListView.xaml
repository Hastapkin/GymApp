<UserControl x:Class="GymApp.Views.Memberships.MembershipListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:GymApp.Helpers">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Show sub-view if CurrentView is not null -->
        <ContentControl Grid.Row="0" Grid.RowSpan="2"
                        Content="{Binding CurrentView}"
                        Visibility="{Binding CurrentView, Converter={x:Static helpers:NullToVisibilityConverter.Instance}}"/>

        <!-- Main membership list view -->
        <Grid Grid.Row="0" Grid.RowSpan="2"
              Visibility="{Binding CurrentView, Converter={x:Static helpers:NullToVisibilityConverter.Inverse}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Membership Packages Management" 
                       Style="{StaticResource HeaderTextStyle}"/>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Margin="10">
                <Button Content="Add Package" 
                        Command="{Binding CreateMembershipCommand}"/>
                <Button Content="Edit Package" 
                        Command="{Binding EditMembershipCommand}"/>
                <Button Content="Delete Package" 
                        Command="{Binding DeleteMembershipCommand}"/>
            </StackPanel>

            <!-- Memberships DataGrid -->
            <DataGrid Grid.Row="2"
                      ItemsSource="{Binding Memberships}"
                      SelectedItem="{Binding SelectedMembership}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="60"/>
                    <DataGridTextColumn Header="Package Name" 
                                        Binding="{Binding PackageName}" 
                                        Width="200"/>
                    <DataGridTextColumn Header="Description" 
                                        Binding="{Binding Description}" 
                                        Width="300"/>
                    <DataGridTextColumn Header="Duration (Days)" 
                                        Binding="{Binding DurationDays}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="Price" 
                                        Binding="{Binding Price, StringFormat=C}" 
                                        Width="120"/>
                    <DataGridCheckBoxColumn Header="Active" 
                                            Binding="{Binding IsActive}" 
                                            Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>